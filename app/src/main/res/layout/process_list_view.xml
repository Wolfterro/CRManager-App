<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/processListRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/crmanager_colorPrimaryAlt">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:id="@+id/processInstanceLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/processInstanceProtocolNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/crmanager_colorPrimaryDark"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                tools:text="Protocolo Nº 001234567890" />

            <TextView
                android:id="@+id/processInstanceProcessType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/crmanager_colorPrimaryDark"
                android:textSize="14sp"
                tools:text="Serviço: Autorização de Compra" />

            <TextView
                android:id="@+id/processInstanceProcessStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/crmanager_colorPrimaryDark"
                android:textSize="14sp"
                tools:text="Status: Em Análise" />

            <TextView
                android:id="@+id/processInstanceProcessDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/crmanager_colorPrimaryDark"
                android:textSize="14sp"
                tools:text="Prazo: 46 dias (39 dias úteis)" />

            <TextView
                android:id="@+id/processInstanceProcessPCE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/crmanager_colorPrimaryDark"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                tools:text="1x Taurus RT444" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>