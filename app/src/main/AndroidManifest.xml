<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.wolfterro.crmanager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/crmanager_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/crmanager_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CRManager">

        <!-- ProcessEditActivity -->
        <activity
            android:name=".ProcessEditActivity"
            android:exported="true"
            android:theme="@style/Theme.CRManager.NoActionBar.FullScreen" />

        <!-- UserProfileDetailActivity -->
        <activity
            android:name=".UserProfileDetailActivity"
            android:exported="true"
            android:theme="@style/Theme.CRManager.NoActionBar.FullScreen" />

        <!-- SignUpActivity -->
        <activity
            android:name=".SignUpActivity"
            android:exported="true"
            android:theme="@style/Theme.CRManager.NoActionBar.FullScreen" />

        <!-- ProcessDetailActivity -->
        <activity
            android:name=".ProcessDetailActivity"
            android:exported="true"
            android:theme="@style/Theme.CRManager.NoActionBar.FullScreen" />

        <!-- ProcessAddActivity -->
        <activity
            android:name=".ProcessAddActivity"
            android:exported="true"
            android:theme="@style/Theme.CRManager.NoActionBar.FullScreen" />

        <!-- LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.CRManager.NoActionBar.FullScreen" />

        <!-- SplashActivity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.CRManager.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CRManager.NoActionBar.FullScreen" />
    </application>

</manifest>